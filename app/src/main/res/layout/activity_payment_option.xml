<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.selectUserType.passengerSignUp.paymentOption.PaymentOptionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/app_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/backpressPaymentOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_ic" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPaymentOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Payment Option"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:fontFamily="@font/roboto_bold"
            app:layout_constraintBottom_toBottomOf="@+id/backpressPaymentOption"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/backpressPaymentOption"
            app:layout_constraintTop_toTopOf="@+id/backpressPaymentOption" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/mView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view"
        android:elevation="3dp"
        android:shadowColor="#00000029"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_header" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPaymentMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Payment Option"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mView" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/whitecorner_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPaymentMethod">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_regular"
            android:button="@drawable/custom_paymentoption"
            android:drawableStart="@drawable/credit_card_img"
            android:drawablePadding="20dp"
            android:paddingStart="20dp"
            android:text="Credit / Debit Card" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/view" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_regular"
            android:button="@drawable/custom_paymentoption"
            android:drawableStart="@drawable/wallet_img"
            android:drawablePadding="20dp"
            android:paddingStart="20dp"
            android:text="Wallet" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/view" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checTransfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_regular"
            android:button="@drawable/custom_paymentoption"
            android:drawableStart="@drawable/transfer_img"
            android:drawablePadding="20dp"
            android:paddingStart="20dp"
            android:text="Transfer" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/view" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checYape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_regular"
            android:button="@drawable/custom_paymentoption"
            android:drawableStart="@drawable/yape_img"
            android:drawablePadding="20dp"
            android:paddingStart="20dp"
            android:text="Yape" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/view" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checPLIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_regular"
            android:button="@drawable/custom_paymentoption"
            android:drawableStart="@drawable/plin_img"
            android:drawablePadding="20dp"
            android:paddingStart="20dp"
            android:text="PLIN" />

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"

            android:background="@color/view" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checCash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_regular"
            android:button="@drawable/custom_paymentoption"
            android:drawableStart="@drawable/cash_img"
            android:drawablePadding="20dp"
            android:paddingStart="20dp"
            android:text="Cash" />

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/view" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checRedeemPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/wallet_img"
                android:drawablePadding="20dp"
                android:paddingStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Redeem Points"
                android:textSize="15sp"
                android:layout_weight="1"
                android:button="@drawable/customecheck_paymentoption"
                android:fontFamily="@font/roboto_regular"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="20 Points"
                android:textColor="#02B509"
                android:textSize="14sp"
                android:layout_marginTop="20dp"

                />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>



    <TextView
        android:id="@+id/btnSubmitPaymentOption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/yellow_btn_corner"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:paddingVertical="15dp"
        android:layout_marginHorizontal="30dp"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>