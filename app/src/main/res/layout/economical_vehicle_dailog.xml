<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/mView"
            android:layout_width="70dp"
            android:layout_height="3dp"
            android:layout_marginTop="19dp"
            android:background="@color/black"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTaxiSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/roboto_black"
            android:gravity="center"
            android:text="Economical Vehicle"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mView" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/mContinuewithsameFare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:button="@drawable/custome_check_box"
            android:checked="false"
            android:fontFamily="@font/roboto_regular"
            android:paddingStart="15dp"
            android:text="Continue with same Fare"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/tvTaxiSchedule"
            app:layout_constraintTop_toBottomOf="@+id/tvTaxiSchedule" />

        <View
            android:id="@+id/mView1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="23dp"
            android:background="@color/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mContinuewithsameFare" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/mSendNegotiateFare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:button="@drawable/custome_check_box"
            android:checked="false"
            android:fontFamily="@font/roboto_regular"
            android:paddingStart="15dp"
            android:text="Send Negotiate Fare"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/mView1"
            app:layout_constraintTop_toBottomOf="@+id/mView1" />

        <View
            android:id="@+id/mView2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="23dp"
            android:background="@color/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mSendNegotiateFare" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mView2">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/mCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/red_btn_corner"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:paddingHorizontal="50dp"
                android:paddingVertical="14dp"
                android:text="Cancel"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/mContinue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:background="@drawable/yellow_btn_corner"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="50dp"
                android:paddingVertical="14dp"
                android:text="Continue"
                android:textSize="16sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>