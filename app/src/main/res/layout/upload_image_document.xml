<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_uploadDoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/document_uplaod_ic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_docName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="upload doc"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/img_uploadDoc"
        app:layout_constraintStart_toStartOf="@+id/img_uploadDoc"
        app:layout_constraintTop_toBottomOf="@+id/img_uploadDoc" />

</androidx.constraintlayout.widget.ConstraintLayout>